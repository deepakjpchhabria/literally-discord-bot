{
  "env": {
    "node": true,
    "browser": false,
    "es2021": true
  },
  "extends": ["google"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-console": "warn",
    "indent": ["error", 2],
    "object-curly-spacing": "off",
    "no-unused-vars": "warn",
    "operator-linebreak": "off",
    "quotes": ["error", "double", { "allowTemplateLiterals": true }],
    "require-jsdoc": "off"
  }
}
